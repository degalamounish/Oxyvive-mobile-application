<signup>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        # back button
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release: root.on_back_button()
        # Label
        MDLabel:
            text: "Create new account"
            font_name: "Roboto"
            font_size: "18sp"
            pos_hint: {"center_x": .6, "center_y": .89}
            color: rgba(0, 0, 0, 255)
        # Username input
        MDFloatLayout:
            size_hint: .7, .04
            pos_hint: {"center_x": .5, "center_y": .84}
            MDTextField:
                id: signup_name
                hint_text: "       Name"
                font_name: "Roboto"
                helper_text:''
                helper_text_mode:  'on_error'
                keyboard_suggestions: True
                pos_hint: {"center_x": .5, "center_y": 0}
                multiline: False
                write_tab: False
                mode: "rectangle"
                required: True
                line_color_focus: [1, 0, 0, 1]
                hint_text_color_focus: [1, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: [1, 0, 0, 1]



        # Email input
        MDFloatLayout:
            size_hint: .7, .04
            pos_hint: {"center_x": .5, "center_y": .74}
            MDTextField:
                id: signup_email
                hint_text: "       Email"
                font_name: "Roboto"
                helper_text:""
                helper_text_mode: 'on_error'
                keyboard_suggestions: True
                pos_hint: {"center_x": .5, "center_y": 0}
                multiline: False
                write_tab: False
                mode: "rectangle"
                required: True
                line_color_focus: [1, 0, 0, 1]
                hint_text_color_focus: [1, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: [1, 0, 0, 1]

        # Password input
        MDFloatLayout:
            size_hint: .7, .04
            pos_hint: {"center_x": .5, "center_y": .64}
            MDTextField:
                id: signup_password
                hint_text: "      Password"
                font_name: "Roboto"
                helper_text:""
                helper_text_mode: 'on_error'
                keyboard_suggestions: True
                pos_hint: {"center_x": .5, "center_y": 0}
                multiline: False
                password: True
                write_tab: False
                mode: "rectangle"
                required: True
                line_color_focus: [1, 0, 0, 1]
                hint_text_color_focus: [1, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: [1, 0, 0, 1]
            MDIconButton:
                id: show_password_button
                pos_hint: {"center_x": .9, "center_y": -.15}
                active: False  # Initial state is password hidden
                text_color: [0, 0, 0, 1]
                opposite_colors: True
                background_palette: "Grey"
                background_hue: "500"
                elevation_normal: 10
                on_release:
                    self.active = not self.active
                    signup_password.password = not self.active
                Image:
                    source: "images/eye-off.png" if not show_password_button.active else "images/eye.png"

        # Phone num input
        MDFloatLayout:
            size_hint: .7, .04
            pos_hint: {"center_x": .5, "center_y": .54}
            MDTextField:
                id: signup_phone
                hint_text: "       Phone no"
                font_name: "Roboto"
                helper_text:""
                helper_text_mode:  'on_error'
                keyboard_suggestions: True
                pos_hint: {"center_x": .5, "center_y": 0}
                multiline: False
                write_tab: False
                input_type: "number"
                mode: "rectangle"
                required: True
                line_color_focus: [1, 0, 0, 1]
                hint_text_color_focus: [1, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: [1, 0, 0, 1]

        # Pincode input
        MDFloatLayout:
            size_hint: .7, .04
            pos_hint: {"center_x": .5, "center_y": .44}
            MDTextField:
                id: signup_pincode
                hint_text: "       Pincode"
                font_name: "Roboto"
                helper_text:("")
                helper_text_mode:  'on_error'
                keyboard_suggestions: True
                pos_hint: {"center_x": .5, "center_y": 0}
                multiline: False
                write_tab: False
                input_type: "number"
                mode: "rectangle"
                required: True
                line_color_focus: [1, 0, 0, 1]
                hint_text_color_focus: [1, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: [1, 0, 0, 1]

        # pan_card_no input
        MDFloatLayout:
            size_hint: .7, .04
            pos_hint: {"center_x": .5, "center_y": .34}
            MDTextField:
                id: signup_pan_card_no
                hint_text: "        PAN Number"
                font_name: "Roboto"
                helper_text:''
                helper_text_mode:  'on_error'
                keyboard_suggestions: True
                pos_hint: {"center_x": .5, "center_y": 0}
                multiline: False
                write_tab: False
                mode: "rectangle"
                required: True
                line_color_focus: [1, 0, 0, 1]
                hint_text_color_focus: [1, 0, 0, 1]
                canvas.before:
                    Color:
                        rgba: [1, 0, 0, 1]

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: .7, .08
            pos_hint: {"center_x": .5, "center_y": .21}
            height: "100dp"
            width: dp(200)
            padding: [0, 0, 20, 0]
            canvas.before:
                Color:
                    rgba: 149/255, 165/255, 166/255, 1  # Grey color for the border
                Line:
                    rounded_rectangle: [self.x, self.y, self.width, self.height, 10]
                    width: 1.23

            MDIconButton:
                icon: 'upload'
                pos_hint: {"center_x": .1, "center_y": .5}
                #icon_color: 0,0,0,1
                theme_text_color: "Custom"
                text_color: 1, 0, 0, 1  # Black color for the icon
                on_press: root.choose_profile_picture()

            MDLabel:
                id: signup_profile_pic
                text: 'Upload Profile Photo'
                font_name: "Roboto"
                font_size: '17dp'
                #font_name: "Roboto-Bold"
                color: 1, 0, 0, 1  # Red color for the label
                pos_hint: {"center_x": .5, "center_y": .5}

            #Image:
                #id: profile_image
                #source: ''
                #size_hint: None, None
                #size: 60, 60
                #pos_hint: {"center_x": -1, "center_y": .5}
                #allow_stretch: True

            MDLabel:
                id:profile_name
                pos_hint: {"center_x": -1, "center_y": .5}
                text:'None'
                font_size: '10dp'
                valign:'center'
                halign:'center'

        # signup button
        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .11}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            on_press: root.users(self)

            canvas.before:
                Color:
                    rgb: rgba(255, 0, 0, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [17, 17, 17, 17]
